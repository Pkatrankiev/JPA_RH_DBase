<?xml version="1.0" encoding="utf-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence 
http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="JPA_RH_DBase">


		<class>DBase_Class.Ind_num_doc</class>
		<class>DBase_Class.Izpitvan_produkt</class>
		<class>DBase_Class.Izpitvan_pokazatel</class>
		<class>DBase_Class.List_izpitvan_pokazatel</class>
		<class>DBase_Class.Obekt_na_izpitvane_request</class>
		<class>DBase_Class.Zabelejki</class>
		<class>DBase_Class.Razmernosti</class>
		<class>DBase_Class.Users</class>
		<class>DBase_Class.Nuclide</class>
		<class>DBase_Class.Metody</class>
		<class>DBase_Class.Internal_applicant</class>
		<class>DBase_Class.External_applicant</class>
		<class>DBase_Class.Request</class>
		<class>DBase_Class.Sample</class>
		<class>DBase_Class.Results</class>
		<class>DBase_Class.Post</class>
		<class>DBase_Class.Obekt_na_izpitvane_sample</class>

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/rhdbase?characterEncoding=UTF-8" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.target-database" value="MySQL" />
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddl-generation" value="create-tables" />

			<property name="hibernate.connection.characterEncoding"
				value="utf8" />
			<property name="hibernate.connection.useUnicode" value="true" />
			<property name="hibernate.connection.charSet" value="utf8" />
		</properties>

	</persistence-unit>
</persistence>
